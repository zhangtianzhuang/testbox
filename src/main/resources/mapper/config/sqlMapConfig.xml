<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!--配置全局属性-->
    <settings>
        <!--使用jdbc的getGeneratedKeys获取数据库自增主键值-->
        <setting name="useGeneratedKeys" value="true"/>
        <!--使用列标签替换列别名 默认未true-->
        <setting name="useColumnLabel" value="true" />
        <!--开启驼峰式命名转换：Table{create_time} -> Entity{createTime}-->
        <setting name="mapUnderscoreToCamelCase" value="true" />
    </settings>

    <!--对一些常用的类可以起简单的名字-->
    <typeAliases>
        <typeAlias type="com.bjtu.testbox.entity.User" alias="user"/>
        <typeAlias type="com.bjtu.testbox.entity.Worker" alias="worker"/>
        <typeAlias type="com.bjtu.testbox.entity.Approver" alias="approver"/>
        <typeAlias type="com.bjtu.testbox.entity.Box" alias="box"/>
        <typeAlias type="com.bjtu.testbox.entity.Cable" alias="cable"/>
        <typeAlias type="com.bjtu.testbox.entity.Examine" alias="examine"/>
        <typeAlias type="com.bjtu.testbox.entity.Task" alias="task"/>
        <typeAlias type="com.bjtu.testbox.entity.Taskbox" alias="taskbox"/>
        <typeAlias type="com.bjtu.testbox.entity.SysRole" alias="role"/>
        <typeAlias type="com.bjtu.testbox.entity.SysPermission" alias="perm"/>
    </typeAliases>

</configuration>